server {
    # listen on port 80 (http)
    listen 80;
    server_name _;
    location / {
        # redirect any requests to the same URL but on https
        return 301 https://localhost$request_uri;
    }
}

server {
    # listen on port 443 (https)
    listen 443 ssl;
    server_name _;

    # location of the self-signed SSL certificate
    ssl_certificate /etc/letsencrypt/live/api.pastebin.io/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.pastebin.io/privkey.pem;

    # write access and error logs to /var/log
    access_log /var/log/pastebin-api_access.log;
    error_log /var/log/pastebin-api_error.log;

    location /pastebin-api/api/v1/paste {
        # forward application requests to the gunicorn server
        proxy_pass http://localhost:5000/api/v1/paste;
        proxy_redirect off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /pastebin-api/api/v1/stats/hits {
        # forward application requests to the gunicorn server
        proxy_pass http://localhost:5000/api/v1/stats/hits;
        proxy_redirect off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}